{
  "compilerOptions": {
    // "target": "es5",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // "noImplicitAny": false,  // TS: Sven
    "paths": {
      "@/*": ["./src/*"]
    },
    // typeroots: types-folder for next-auth
    "typeRoots": ["./types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "db/models/Favorite.js"],
  "exclude": ["node_modules"]
}
